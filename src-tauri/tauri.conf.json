{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AI Novel Studio",
  "version": "0.1.0",
  "identifier": "com.ainovelstudio.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI Novel Studio",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "fs": {
      "scope": [
        {
          "allow": ["**"],
          "deny": []
        }
      ]
    }
  }
}
